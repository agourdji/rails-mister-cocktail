<div class="header">
  <h1>THE MINIBAR</h1>
</div>

<div class="container text-center">
  <h2>Add a Cocktail</h2>
  <div class="form">
    <%= simple_form_for [@cocktail] do |c| %>
      <%= c.input :name %>
      <%= c.input :photo, as: :attachinary %>
      <%= c.submit "Add cocktail", :class => "btn btn-success btn-md" %>
    <% end %>
  </div>
</div>

<div class="banner-footer" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "banner_footer.jpg" %>');">
