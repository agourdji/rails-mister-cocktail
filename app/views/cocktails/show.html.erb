<h1><%= @cocktail.name %></h1>
<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200 %>
<% end %>
<% @cocktail.doses.each do |d| %>
<ul>
  <li><%= d.ingredient.name %></li>
  <p><%= d.description %></p>
  <p><%= link_to 'Delete dose', cocktail_dose_path(d), method: :delete %></p>
</ul>
<% end %>
<p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail)%></p>
<p><%= link_to 'Back', cocktails_path%></p>
