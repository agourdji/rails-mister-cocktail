<div class="col-xs-12 col-sm-4">
  <%= link_to cocktail_path(cocktail) do %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.path, width: 150 %>');">
      <div class="card-description">
        <h3><%= cocktail.name %></h3>
      </div>
    </div>
  <% end %>
</div>
